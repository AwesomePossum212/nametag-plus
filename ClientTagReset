while true do --Repeats the code below infinitely.
	wait(.1) --Waits .1 seconds every iteration.
	repeat --This part checks to make sure the character exists.
		wait(.001)
	until script.Parent.Parent.Character ~= nil
	if script.Parent.Parent.Character.Humanoid.Health == 0 then --Checks if the player's health is 0.
		wait(game.Players.RespawnTime + .25) --Waits the RespawnTime + .25 seconds.
		workspace.NametagMain.Resources.ResetTag:FireServer() --Fires the ResetTag event on the server.
	end --Denotes the end of the if-then statment.
end --Denotes the end of the while-do loop.
